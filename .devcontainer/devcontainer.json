{
  "name": "${localWorkspaceFolderBasename}",
  "image": "mcr.microsoft.com/devcontainers/universal:linux",
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "openai.chatgpt"
      ]
    }
  },
  "runArgs": [
    "--env-file",
    "${localEnv:HOME}/code/devcontainer.env"
  ],
  "containerEnv": {
      "HOST_WORKSPACE": "${localWorkspaceFolder}"
  },
  "mounts": [
    "source=${localEnv:HOME}/.codex,target=/home/codespace/.codex,type=bind",
    "source=${localWorkspaceFolder}/.codex/sessions,target=/home/codespace/.codex/sessions,type=bind"
  ],
  "postStartCommand": "bash .devcontainer/sync-netrc.sh"
}
